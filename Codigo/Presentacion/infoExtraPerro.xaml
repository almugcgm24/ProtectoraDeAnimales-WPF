            <Label Content="Vacunado" HorizontalAlignment="Left" Margin="-10,114,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.605,-2.615" Width="157" HorizontalContentAlignment="Right"/>
            <Label Content="Leishmaniosis" HorizontalAlignment="Left" Margin="-10,145,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.605,-2.615" Width="157" HorizontalContentAlignment="Right"/>
