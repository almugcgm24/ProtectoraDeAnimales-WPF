            <Label Content="Estado" HorizontalAlignment="Left" Margin="-10,300,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.605,-2.615" Width="157" HorizontalContentAlignment="Right"/>
            <Label Content="Descripción" HorizontalAlignment="Left" Margin="-10,331,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.605,-2.615" Width="157" HorizontalContentAlignment="Right"/>
            <TextBox x:Name="estadoPerro" HorizontalAlignment="Left" Height="26" Margin="152,300,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" IsEnabled="False" Grid.ColumnSpan="2"/>
            <TextBox x:Name="descripcionPerro" HorizontalAlignment="Left" Height="67" Margin="152,331,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" IsEnabled="False" Grid.ColumnSpan="2"/>
            <CheckBox x:Name="cachorroPerro" Content="" HorizontalAlignment="Left" Margin="152,57,0,0" VerticalAlignment="Top" RenderTransformOrigin="6.8,-21" IsEnabled="False"/>
            <CheckBox x:Name="pppPerro" Content="" HorizontalAlignment="Left" Margin="152,89,0,0" VerticalAlignment="Top" RenderTransformOrigin="6.8,-21" IsEnabled="False"/>
            <CheckBox x:Name="vacunadoPerro" Content="" HorizontalAlignment="Left" Margin="152,122,0,0" VerticalAlignment="Top" RenderTransformOrigin="6.8,-21" IsEnabled="False"/>
